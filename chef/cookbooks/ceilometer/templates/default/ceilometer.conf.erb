[DEFAULT]
os_auth_url = http://<%= @keystone_address %>:<%= @keystone_service_port %>/v2.0
os_tenant_name = <%= @keystone_service_tenant %>
os_password = <%= @keystone_service_password %>
os_username = <%= @keystone_service_user %>
policy_file = /etc/ceilometer/policy.json
verbose = <%= @verbose ? "True" : "False" %>
notification_topics = notifications,glance_notifications
rabbit_host = <%= @rabbit_settings[:address] %>
rabbit_port = <%= @rabbit_settings[:port] %>
rabbit_userid = <%= @rabbit_settings[:user] %>
rabbit_password = <%= @rabbit_settings[:password] %>
rabbit_virtual_host = <%= @rabbit_settings[:vhost] %>
rpc_backend = ceilometer.openstack.common.rpc.impl_kombu
db_connection = mongodb://<%= @db_host %>:27017/ceilometer
log_dir = /var/log/ceilometer

[keystone_authtoken]
signing_dir = /var/cache/ceilometer
admin_tenant_name = <%= @keystone_service_tenant %>
admin_password = <%= @keystone_service_password %>
admin_user = <%= @keystone_service_user %>
auth_protocol = http


